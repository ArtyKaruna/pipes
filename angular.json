{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1, 
  "newProjectRoot": "packages",
  "projects": {
    "pipes": {
      "projectType": "library",
      "root": "packages/pipes",
      "sourceRoot": "packages/pipes/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-ng-packagr:build",
          "options": {
            "tsConfig": "packages/pipes/tsconfig.lib.json",
            "project": "packages/pipes/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "packages/pipes/tsconfig.lib.prod.json"
            }
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "packages/pipes/src/test.ts",
            "tsConfig": "packages/pipes/tsconfig.spec.json",
            "karmaConfig": "packages/pipes/karma.conf.js"
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "packages/pipes/tsconfig.lib.json",
              "packages/pipes/tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    },
    "test": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        }
      },
      "root": "packages/test",
      "sourceRoot": "packages/test/src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist/test",
            "index": "packages/test/src/index.html",
            "main": "packages/test/src/main.ts",
            "polyfills": "packages/test/src/polyfills.ts",
            "tsConfig": "packages/test/tsconfig.app.json",
            "aot": true,
            "assets": [
              "packages/test/src/favicon.ico",
              "packages/test/src/assets"
            ],
            "styles": [
              "packages/test/src/styles.scss"
            ],
            "scripts": []
          },
          "configurations": {
            "production": {
              "fileReplacements": [
                {
                  "replace": "packages/test/src/environments/environment.ts",
                  "with": "packages/test/src/environments/environment.prod.ts"
                }
              ],
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "extractCss": true,
              "namedChunks": false,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true,
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "2mb",
                  "maximumError": "5mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "6kb",
                  "maximumError": "10kb"
                }
              ]
            }
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "browserTarget": "test:build"
          },
          "configurations": {
            "production": {
              "browserTarget": "test:build:production"
            }
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "test:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "packages/test/src/test.ts",
            "polyfills": "packages/test/src/polyfills.ts",
            "tsConfig": "packages/test/tsconfig.spec.json",
            "karmaConfig": "packages/test/karma.conf.js",
            "assets": [
              "packages/test/src/favicon.ico",
              "packages/test/src/assets"
            ],
            "styles": [
              "packages/test/src/styles.scss"
            ],
            "scripts": []
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "packages/test/tsconfig.app.json",
              "packages/test/tsconfig.spec.json",
              "packages/test/e2e/tsconfig.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        },
        "e2e": {
          "builder": "@angular-devkit/build-angular:protractor",
          "options": {
            "protractorConfig": "packages/test/e2e/protractor.conf.js",
            "devServerTarget": "test:serve"
          },
          "configurations": {
            "production": {
              "devServerTarget": "test:serve:production"
            }
          }
        }
      }
    }},
  "defaultProject": "pipes"
}
